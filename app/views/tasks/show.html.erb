<h1><%= @task.title %></h1>
<div class="details">
  <p><%= @task.details %></p>
</div>
<% if @task.completed %>
  <i class="far fa-check-square"></i> This task is completed
<% else %>
  <i class="far fa-square"></i> This task is not completed yet
<% end %>
<hr>
<%= link_to 'Back to list', tasks_path %>
<%= link_to 'Edit', task_edit_path(@task) %>

